# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Load App Store Connect API Key"
  lane :load_asc_api_key do
    app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_KEY"],
      is_key_content_base64: true,
      in_house: false
    )
  #  pilot( api_key_path: "fastlane/api_key.json" )
  end

  desc "Fetch and increment build number"
  lane :fetch_and_increment_build_number do
    app_identifier = CredentialsManager::AppfileConfig.try_fetch_value(:app_identifier)
    api_key = lane_context[SharedValues::APP_STORE_CONNECT_API_KEY]

    current_version = get_version_number(target: "Runner")

    latest_build_number = latest_testflight_build_number(
      api_key: api_key,
      version: current_version,
      app_identifier: app_identifier
    )

    increment_build_number(build_number: (latest_build_number + 1))
  end

  desc "Code Signing using Match"
  lane :code_signing do
    match(
      type: "appstore",
      git_url: ENV["MATCH_GIT_URL"],  # explicit repo url
      readonly: false,
      shallow_clone: true
    )
  end



  desc "Build and upload to TestFlight"
  lane :beta do

     # --- Step 2: Define keychain path and create it ---
    keychain_path = File.expand_path("~/Library/Keychains/build.keychain")
    sh "mkdir -p ~/Library/Keychains"

    create_keychain(
      path: keychain_path,
      password: ENV["MATCH_PASSWORD"], 
      default_keychain: true,
      unlock: true,
      timeout: 3600
    )
    
    # --- Step 3: Sync and install certificates/profiles using Match ---
    # This installs the certificate INTO the created keychain
    match(type: "appstore", shallow_clone: true)

    # --- Step 4: Set the keychain permissions AFTER the certificate is installed ---
    # Now the security command can find the certificate item
    unlock_keychain(
      path: keychain_path,
      password: ENV["MATCH_PASSWORD"], 
    )
    sh "security set-keychain-settings -u #{keychain_path}"
    # This command grants access to the certificate without prompting
    sh "security set-key-partition-list -S apple-tool:,apple: -s -k #{ENV["MATCH_PASSWORD"]} #{keychain_path}"
    # ------------------------------------------------------------------

    load_asc_api_key
    code_signing
    fetch_and_increment_build_number
    clear_derived_data

    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      clean: true,
      xcargs: "-allowProvisioningUpdates",
      include_bitcode: false,
      export_options: {
        provisioningProfiles: {
          "com.kodeit.scriptureunion" => "match AppStore com.kodeit.scriptureunion"
        }
      }
    )


    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      changelog: "Automated build from GitHub Actions"
    )
  end
end
