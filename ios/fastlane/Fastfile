# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do

    # --- 1. Authenticate with App Store Connect API ---
    app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_KEY"],
      is_key_content_base64: true,
      in_house: false
    )

    # --- 2. Sync and install certificates/profiles using Match ---
    # Fastlane automatically handles temporary keychain creation and unlocking for CI environments
    match(
      type: "appstore", 
      shallow_clone: true,
      git_url: ENV["MATCH_GIT_URL"] # Use the env var set in your YAML file
    )

    # --- 3. Update Xcode project build settings for manual signing ---
    # This action handles all necessary permissions and links the profile correctly, replacing the SH commands
    update_code_signing_settings(
      use_automatic_signing: false,
      code_signing_identity: "Apple Distribution", 
      bundle_identifier: "com.kodeit.scriptureunion"
    )

    # --- 4. Fetch latest build number and increment it ---
    app_identifier = "com.kodeit.scriptureunion"
    current_version = get_version_number(target: "Runner")
    latest_build_number = latest_testflight_build_number(version: current_version, app_identifier: app_identifier)
    increment_build_number(build_number: (latest_build_number + 1))
    
    clear_derived_data

    # --- 5. Build the iOS app ---
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      clean: true,
      include_bitcode: false,
      # Remove xcargs and export_options block as they conflict with explicit manual signing setup above:
      # xcargs: "-allowProvisioningUpdates", 
      # export_options: { ... }

      # Add these reliable parameters back (your modern Fastlane version should support these)
      code_signing_identity: "Apple Distribution", 
      provisioning_profile_uuid: ENV["sigh_com.kodeit.scriptureunion_AppStore"]
    )

    # --- 6. Upload to TestFlight ---
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      changelog: "Automated build from GitHub Actions"
    )
  end
end
