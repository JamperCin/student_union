#-----------------------------------------------------------------------------------------
# Helper methods for versioning pubspec.yaml

# ---------------------------
# Helper: Read version from pubspec.yaml
# ---------------------------
def get_pubspec_version
  pubspec = File.read("../pubspec.yaml")
  match = pubspec.match(/version:\s+(\d+\.\d+\.\d+)\+(\d+)/)
  if match
    return "#{match[1]}"
  else
    UI.user_error!("Could not read pubspec version")
  end
end

# ---------------------------
# Helper: Increment version name
# Example: "1.0.8" → "1.0.9"
# ---------------------------
def increment_version_name(version)
  parts = version.split(".")
  parts[-1] = parts[-1].to_i + 1
  return parts.join(".")
end

# ---------------------------
# Helper: Update pubspec.yaml version + build
# ---------------------------
def update_pubspec(new_version, new_build)
  file = "../pubspec.yaml"
  content = File.read(file)
  new_line = "version: #{new_version}+#{new_build}"
  updated = content.gsub(/version:\s+\d+\.\d+\.\d+\+\d+/, new_line)
  File.write(file, updated)
  puts("Updated pubspec.yaml → #{new_line}")
end


#-----------------------------------------------------------------------------------------

def get_pubspec_version
  pubspec = File.read("../../pubspec.yaml")
  version_line = pubspec.lines.find { |line| line.start_with?("version:") }
  version = version_line.split(":").last.strip
  return version
end

def increment_version_name(version)
  major, minor, patch = version.split(".").map(&:to_i)
  patch += 1
  return "#{major}.#{minor}.#{patch}"
end

def update_pubspec(new_version_name, new_build_number)
  pubspec_path = "../../pubspec.yaml"
  pubspec = File.read(pubspec_path)

  new_version_line = "version: #{new_version_name}+#{new_build_number}"
  updated_pubspec = pubspec.gsub(/^version: .+$/, new_version_line)

  File.write(pubspec_path, updated_pubspec)
  puts("Updated pubspec.yaml to version #{new_version_name}+#{new_build_number}")
end

#-----------------------------------------------------------------------------------------
# End of helper methods for versioning pubspec.yaml
#-----------------------------------------------------------------------------------------`

default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do

    # --- 1. Authenticate with App Store Connect ---
    app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_KEY"],
      is_key_content_base64: true
    )

    # --- 2. Create and unlock CI keychain ---
    keychain_path = File.expand_path("~/Library/Keychains/build.keychain")
    create_keychain(
      path: keychain_path,
      password: ENV["MATCH_PASSWORD"],
      default_keychain: true,
      unlock: true,
      timeout: 3600
    )

    # --- 3. Install certificates + provisioning profiles ---
    match(
      type: "appstore",
      readonly: false,
      git_url: ENV["MATCH_GIT_URL"],
      keychain_name: "build.keychain",
      keychain_password: ENV["MATCH_PASSWORD"]
    )

    # --- 4. Ensure keychain stays unlocked ---
    sh "security set-keychain-settings -lut 21600 #{keychain_path}"

    # --- 5. Increment build number ---
    # current_version = get_version_number(target: "Runner")
    # latest = latest_testflight_build_number(
    #   version: current_version,
    #   app_identifier: "com.kodeit.scriptureunion"
    # )
    # increment_build_number(
    #   xcodeproj: "../ios/Runner.xcodeproj",
    #   build_number: latest + 1
    #   )

    app_identifier = CredentialsManager::AppfileConfig.try_fetch_value(:app_identifier)
    api_key = lane_context[SharedValues::APP_STORE_CONNECT_API_KEY]

  # 5.1. Read pubspec version
    pubspec_version = get_pubspec_version
    puts("Current pubspec version: #{pubspec_version}")

  # 5.2. Increment version name (1.0.8 -> 1.0.9)
    new_version_name = increment_version_name(pubspec_version)

  # 5.3. Get latest build number from App Store
    latest_build = latest_testflight_build_number(
      api_key: api_key,
      version: new_version_name,
      app_identifier: app_identifier
    ) || 0

    new_build_number = latest_build + 1
    puts("New build number: #{new_build_number}")

  # 5.4. Update pubspec.yaml
    update_pubspec(new_version_name, new_build_number)

  # 5.5. Update Xcode project
     increment_build_number(
        xcodeproj: "../ios/Runner.xcodeproj",
        build_number: new_build_number
      )
    increment_version_number(version_number: new_version_name)

    sh "sed -i '' 's/\\+.*$/+#{new_build_number}/' ../../pubspec.yaml"

    clear_derived_data

    # --- 6. Build IPA ---
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      clean: true,
      include_bitcode: false,
      export_options: {
        provisioningProfiles: {
          "com.kodeit.scriptureunion" => "match AppStore com.kodeit.scriptureunion"
        }
      }
    )

    # --- 7. Upload to TestFlight ---
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      changelog: "Automated GitHub Actions build"
    )
  end
end

